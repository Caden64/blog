---
import "../styles/global.css";
const { frontmatter } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const foregroundColor = "rgb(221 243 228)";
const backgroundColor = "rgb(24 121 78)";
---

<html>
    <head>
        <title>{frontmatter.title}</title>
        <link rel="stylesheet" href="/styles/prism-material-light.css" />
    </head>

    <Header />
    <h1 class="text-center underline decoration-pickel-me-pink-500 text-2xl">
        {frontmatter.title}
    </h1>
    <main
        class="h-screen bg-white grid ml-28 prose-h1:ml-40 prose-p:ml-64 text-2xl mb-4 overflow-auto scroll-m-0"
    >
        <slot />
    </main>
    <div class="fixed bottom-0 w-full">
        <Footer />
    </div>
</html>
