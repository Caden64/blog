---
interface Props {
    title: String;
    description: String;
    tags: String[];
}

const { title, description,tags} = Astro.props;
---

<div class="hidden flex-wrap lg:flex bg-stone-200 px-4 w-auto mx-8 my-12 py-2 rounded-md text-stone-800">
    <div class="text-xl pb-2">
        <h1>{title}</h1>
        <h3 class="text-lg">{description}</h3>
    </div>
    <div class="flex justify-between items-center">
        <ul class="flex gap-4">
            {
                tags.map((tag) => {
                    return(
                        <li class="border-2 rounded-full px-2 border-stone-400">
                            <a>{tag}</a>
                        </li>
                    )
                })
            }
        </ul>
    </div>
</div>

<div class="flex flex-col gap-y-2 flex-wrap lg:hidden bg-stone-200 px-4 w-auto mx-8 my-12 py-2 rounded-md text-stone-800">
    <div class="text-xl pb-2">
        <h1>{title}</h1>
        <h3 class="text-lg">{description}</h3>
    </div>
    <div class="flex justify-between items-center">
        <ul class="flex gap-4">
            {
                tags.map((tag) => {
                    return(
                            <li class="border-2 rounded-full px-2 border-stone-400">
                                <a>{tag}</a>
                            </li>
                    )
                })
            }
        </ul>
    </div>
</div>
